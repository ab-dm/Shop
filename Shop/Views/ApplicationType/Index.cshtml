@model IEnumerable<Shop.Models.ApplicationType>

<div class="contaner p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Create New Application Type
            </a>
        </div>
    </div>

    <br /><br />

   @if (Model.Count() > 0)
   {
       <table class="table table-bordered table-striped" style="width:100%">
           <thead>
               <tr>
                   <th>
                       Name
                   </th>
                   <th></th>
               </tr>
           </thead>
           <tbody>
               @foreach(var obj in Model)
               {
                   <tr>
                       <td width="50%">@obj.Name</td>
                       <td>
                           <div class="w-75 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="ApplicationType" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                       </td>
                   </tr>
               }
           </tbody>
       </table>
   }
   else
   {
        <p>No application type exists.</p>
   }

</div>

